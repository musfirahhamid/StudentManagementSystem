@model IEnumerable<StudentManagementSystem.Models.Student>
@{
    ViewBag.Title = "Get";
}

<h2>Get All Student</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            <td>@student.Id</td>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td><a href="@Url.Action("ViewStudent", "Student", new { id= student.Id })">View Student Detail</a></td>
            <td><a href="@Url.Action("Update","Student", new { id = student.Id })">Edit Detail</a></td>
            <td><a href="@Url.Action("Delete","Student",new{id=student.Id })">Delete</a></td>
        </tr>
        }
    </tbody>
</table>