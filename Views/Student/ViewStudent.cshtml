
@{
    ViewBag.Title = "GetById";
}

<h2>Student's' Detail</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td><a href="@Url.Action("GetStudent","Student")">Go Back to List</a></td>
            </tr>
    </tbody>
</table>