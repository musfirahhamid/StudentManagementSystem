@model IEnumerable<StudentManagementSystem.Models.Teacher>
@{
    ViewBag.Title = "GetTeacher";
}

<h2>Get All Teacher</h2>

<table class="table text-center" border="1" >
    <thead>
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">First Name</th>
            <th scope="col" class="text-center">Last Name</th>
            <th scope="col" class="text-center">Qualification</th>
            <th scope="col"  colspan="3" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Id</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Qualification</td>
                <td><a href="@Url.Action("ViewTeacher", "Teacher", new { id= teacher.Id})">View Detail</a></td>
                <td><a href="@Url.Action("Update", "Teacher", new { id=teacher.Id})">Edit Teacher</a></td>
                <td><a href="@Url.Action("Delete", "Teacher", new { id= teacher.Id})">Delete</a></td>
            </tr>
        }
    </tbody>
</table>