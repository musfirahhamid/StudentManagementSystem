@model StudentManagementSystem.Models.Course
@{
    ViewBag.Title = "ViewDetails";
}

<h2>View Details</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course Code</th>
            <th scope="col">Course Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.CourseCode</td>
            <td>@Model.CourseName</td>
            <td><a href="@Url.Action("Index","Course")">Go Back to List</a></td>
        </tr>
    </tbody>
</table>